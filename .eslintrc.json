{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
        "node/exports-style": ["error", "module.exports"],
		"node/no-unpublished-require": "warn",
		"no-console": 0,
		"eqeqeq": ["error","smart"],
        "no-mixed-spaces-and-tabs": 0,
        "no-process-exit": 0
    }
}